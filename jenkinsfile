pipeline{
  agent any;
  stages{
    stage ('BUILD') {
      steps {
        echo "This is BUILD stage"
      }
    }
    stage ('TEST') {
      parallel{
        stage('TEST_CHROME'){

          steps {
            echo "This is TEST in Chrome client"
          }
        }
        stage('TEST_SAFARI'){

          steps {
            echo "This is TEST in Safari client"
          }
        }
        stage('TEST_OPERA'){

          steps {
            echo "This is TEST in Opera client"
          }
        }
      }
    }
    stage ('DEPLOY') {
      steps {
        echo "This is DEPLOY stage"
      }
    }
  }
}
